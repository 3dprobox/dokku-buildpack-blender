#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

# fail fast
set -eo pipefail

# parse params
BUILD_DIR=$1
CACHE_DIR=$2
BUILDPACK_NAME=blender

function error() {
  echo " !     $*" >&2
  exit 1
}


function indent() {
  c='s/^/       /'
  case $(uname) in
    Darwin) sed -l "$c";;
    *)      sed -u "$c";;
  esac
}

function vendor() {
  url="$1"
  path="$2"

  echo "Fetching $url" | indent
  mkdir -p $path

  wget -P $CACHE_DIR --no-parent $url

  tar -xvJf "$CACHE_DIR/blender-4.0.2-linux-x64.tar.xz" --strip 1 -C $path
  rm -rf "$CACHE_DIR/blender-4.0.2-linux-x64.tar.xz"

  export PATH=$path:$PATH

  true
}

vendor "https://download.blender.org/release/Blender4.0/blender-4.0.2-linux-x64.tar.xz" "$BUILD_DIR/vendor/blender"
